{% assign product = product %}
{%- assign current_selling_plan = product.selected_or_first_available_selling_plan_allocation -%}

<input type="hidden" name="id" data-productid="{{ product.id }}" value="{{ product.selected_or_first_available_variant.id }}">
<input name="properties[_bg_color]" type="hidden" value="{{ product.metafields.my_fields.gradient_dark_color }}" />
<input name="properties[_highlight_color]" type="hidden" value="{{ product.metafields.my_fields.gradient_light_color }}" />

{%- if current_selling_plan -%}
  {%- assign plan = current_selling_plan.selling_plan -%}
  <input name="properties[_available_selling_plan]" type="hidden" value="{{ plan.id }}" />
{%- endif -%}